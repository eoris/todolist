<div class="main">

  <% if user_signed_in? %>
      <span><%= current_user.email %></span>
      <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>
  <% else %>
      <%= link_to 'Sign In', new_user_session_path %> или <%= link_to 'Sign Up',new_user_registration_path %>
  <% end %>
  <br/>
  <%=link_to 'user profile',  persons_profile_path %>

  <h2>SIMPLE TODO LIST</h2>
  <h4>FROM RUBY GARAGE</h4>


  <div class="projects" >
    <%= render @projects %>
  </div>

  <div class="button_block">
    <a href="" class="button">
        <%= image_tag("addlist_button.gif", class: "list_img") %>
        <span class="addlist">Add TODO List</span>
    </a>
  </div>

  <%= form_for @project, remote: true do |f| %>
    <%= f.text_field :title, :placeholder => ' Enter new project here..' %>
    <%= f.submit 'Add Project' %>
  <% end %>

  <div id="pusher"></div>
  <div id="footer"> 
    <footer>&copy; Ruby Garage</footer>
  </div>
  
</div>