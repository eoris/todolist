            <%= image_tag("list_line.png", class: "line_list_img") %>
            <%= image_tag("list_trash.png", class: "trash_list_img") %>
          </div>
        </div>
      </li>

      <li>
        <div class="task_block">
          <div class="task_checkbox">
            <input class="checkbox" type="checkbox">
          </div>
          <div class="task_name">
            <span class="task_entered_name">Attentively check the file</span>
