<h1>SIMPLE TODO LIST</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th colspan="2"></th>
  </tr>
 
  <% @lists.each do |list| %>
    <tr>
      <td><%= list.title %></td>
      <td><%= link_to 'Show', list_path(list) %></td>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
      <td><%= link_to 'Destroy', list_path(list),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>
</table>
  <%= link_to 'New list', new_list_path %>